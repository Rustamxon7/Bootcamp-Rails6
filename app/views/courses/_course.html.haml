.card.col-3
  .card-header
    .fa.fa-book
    = link_to course.title, course_path(course)
  .card-body
    = course.description
  .card-footer
    .fa.fa-clock
    = course.created_at.strftime("%d-%b-%Y")
    %br
    .fa.fa-chalkboard-teacher
    = course.user
  .card-footer
    %td= link_to 'Show', course, class: 'btn btn-primary'
    %td= link_to 'Edit', edit_course_path(course), class: 'btn btn-warning'
    %td= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
    