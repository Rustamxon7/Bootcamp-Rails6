%nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  .container-fluid
    %a.navbar-brand{:href => "#"} Rubygems
    %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarSupportedContent", "data-bs-toggle" => "collapse", :type => "button"}
      %span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      %ul.navbar-nav.me-auto.mb-2.mb-lg-0
        %li.nav-item{class: "#{'active font-weight-bold' if current_page?(root_path)}"}
          = link_to root_path, class: "nav-link" do
            .fa.fa-home
            Home
        %li.nav-item{class: "#{'active font-weight-bold' if current_page?(courses_path)}"}
          = link_to courses_path, class: "nav-link" do
            .fa.fa-book
            Courses
        %li.nav-item.dropdown
          - if current_user
            #navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "data-bs-toggle" => "dropdown", :href => "#", :role => "button"} #{current_user.email}
            - if current_user
              %ul.dropdown-menu{"aria-labelledby" => "navbarDropdown"}
                %li
                  = link_to "Account settings", edit_user_registration_path, class: "dropdown-item"
                %li
                  = link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item"
            - else
              %ul.dropdown-menu{"aria-labelledby" => "navbarDropdown"}
                %li
                  = link_to "Login", new_user_session_path, class: "dropdown-item"
                %li
                  = link_to "Register", new_user_registration_path, method: :delete, class: "dropdown-item"

      %form.d-flex
        = form_tag(courses_path, method: :get) do
          = text_field_tag :title, params[:title], autocomplete: "off", placeholder: "Search for a course", class: "form-control mr-sm-2"
          %button.btn.btn-outline-success{:type => "submit"} Search
= link_to courses_path, class: 'btn btn-success' do
  .fa.fa-book
  Course